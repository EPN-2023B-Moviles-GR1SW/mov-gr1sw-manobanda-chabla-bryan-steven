<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActualizarFauna">
    <EditText
        android:id="@+id/input_fauna_actualizar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Id"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/input_fauna_actualizar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_fauna_actualizar_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fauna_actualizar_id"
        app:layout_constraintTop_toBottomOf="@+id/input_fauna_actualizar_id" />

    <EditText
        android:id="@+id/input_fauna_actualizar_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tipo"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_fauna_actualizar_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fauna_actualizar_nombre"
        app:layout_constraintTop_toBottomOf="@+id/input_fauna_actualizar_nombre" />

    <EditText
        android:id="@+id/input_fauna_actualizar_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_fauna_actualizar_tipo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fauna_actualizar_tipo"
        app:layout_constraintTop_toBottomOf="@+id/input_fauna_actualizar_tipo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Fauna"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <Button
        android:id="@+id/btn_actualizar_fauna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Actualizar Fauna"
        app:layout_constraintEnd_toEndOf="@+id/cb_fauna_actualizar_depredador"
        app:layout_constraintStart_toStartOf="@+id/cb_fauna_actualizar_depredador"
        app:layout_constraintTop_toBottomOf="@+id/cb_fauna_actualizar_depredador" />

    <EditText
        android:id="@+id/dt_fauna_actualizar_fecha"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Fecha de nacimiento"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_fauna_actualizar_cantidad"
        app:layout_constraintStart_toStartOf="@+id/input_fauna_actualizar_cantidad"
        app:layout_constraintTop_toBottomOf="@+id/input_fauna_actualizar_cantidad" />

    <CheckBox
        android:id="@+id/cb_fauna_actualizar_depredador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Es depredador?"
        app:layout_constraintEnd_toEndOf="@+id/dt_fauna_actualizar_fecha"
        app:layout_constraintStart_toStartOf="@+id/dt_fauna_actualizar_fecha"
        app:layout_constraintTop_toBottomOf="@+id/dt_fauna_actualizar_fecha" />
</androidx.constraintlayout.widget.ConstraintLayout>