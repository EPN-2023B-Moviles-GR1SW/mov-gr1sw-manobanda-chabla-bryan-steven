<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_tiktok"
    android:keepScreenOn="true"
    android:background="@color/black">

    <ImageView
        android:id="@+id/img_disco"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/disco" />

    <ImageView
        android:id="@+id/btn_comentario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/comentario" />

    <ImageView
        android:id="@+id/btn_like"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_comentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/like" />

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/img_disco"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/compartir" />

    <ImageView
        android:id="@+id/btn_fav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/favorito" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btn_persona"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/user"
        app:layout_constraintBottom_toTopOf="@+id/btn_like"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/btn_agregar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="-15dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_persona"
        app:layout_constraintStart_toStartOf="@+id/btn_persona"
        app:layout_constraintTop_toBottomOf="@+id/btn_persona"
        app:srcCompat="@drawable/agregar" />

    <TextView
        android:id="@+id/txt_cancion"
        android:layout_width="167dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/music"
        android:drawablePadding="4dp"
        android:text="Musiko feat Funky"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_disco"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="206dp"
        android:layout_height="62dp"
        android:layout_marginBottom="10dp"
        android:text="description description  description  description  description  description description description description description "
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_cancion"
        app:layout_constraintStart_toStartOf="@+id/txt_cancion" />

    <TextView
        android:id="@+id/txt_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=" @User12345 "
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_descripcion"
        app:layout_constraintStart_toStartOf="@+id/txt_descripcion" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="65dp"
        android:layout_weight="1"
        android:indeterminate="true"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="154dp"></ProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>